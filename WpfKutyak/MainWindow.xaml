                Click="btnFeladat9_Click"/>

        <Button Content="10. feladat" x:Name="btnFeladat10"
                 HorizontalAlignment="Center"
                 VerticalAlignment="Center"
                 FontSize="28"
                 Width="200"
                 Height="50"
                 Grid.ColumnSpan="2"
                 Grid.Row="5" Click="btnFeladat10_Click"/>
    </Grid>
</Window>
